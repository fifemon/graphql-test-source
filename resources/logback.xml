<?xml version="1.0" encoding="utf-8"?>
<configuration scan="true" scanPeriod="1 seconds">
  <appender name="STDOUT"
  class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-5level %logger - %msg%n</pattern>
    </encoder>
  </appender>
  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
